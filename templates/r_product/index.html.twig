{% extends 'base.html.twig' %}

{% block title %}RProduct index{% endblock %}

{% block body %}
    <h1>RProduct index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for r_product in r_products %}
            <tr>
                <td>{{ r_product.id }}</td>
                <td>{{ r_product.name }}</td>
                <td>{{ r_product.category.name }}</td>
                <td>
                    <a href="{{ path('r_product_show', {'id': r_product.id}) }}">show</a>
                    <a href="{{ path('r_product_edit', {'id': r_product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('r_product_new') }}">Create new</a>
{% endblock %}
