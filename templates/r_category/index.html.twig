{% extends 'base.html.twig' %}

{% block title %}RCategory index{% endblock %}

{% block body %}
    <h1>RCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Products</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for r_category in r_categories %}
            <tr>
                <td>{{ r_category.id }}</td>
                <td>{{ r_category.name }}</td>
                <td>
                    {% for r_product in r_category.products %}
                        {{ r_product.name }} </br>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('r_category_show', {'id': r_category.id}) }}">show</a>
                    <a href="{{ path('r_category_edit', {'id': r_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('r_category_new') }}">Create new</a>
{% endblock %}
